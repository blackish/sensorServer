<!-- extend from base layout -->
{% extends "base.html" %}

{% block content %}
<h1>Sign In</h1>
<form class="pure-form" action="" method="post" name="login">
    {{form.hidden_tag()}}
    <p>
        Login:<br>
        {{form.userid()}}<br>
    </p>
    <p>
        Password:<br>
        {{form.passwd}}<br>
    </p>
    <p><input type="submit" value="Sign In"></p>
</form>
{% endblock %}
